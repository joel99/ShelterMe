<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivad.myapplication.MainActivity">

    <Button
        android:id="@+id/bViewShelters"
        android:layout_width="351dp"
        android:layout_height="84dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="16dp"
        android:text="View Shelters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/bAddShelter"
        android:layout_width="351dp"
        android:layout_height="84dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="Add a Shelter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bViewShelters" />

    <Button
        android:id="@+id/bLogOut"
        android:layout_width="351dp"
        android:layout_height="84dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bAddShelter" />
</android.support.constraint.ConstraintLayout>
